{
  "name": "ecommerce-project",
  "version": "1.0.0",
  "private": true,
  "keywords": [
    "node",
    "typescript"
  ],
  "author": "Xavier G. <sx.guzman@hotmail.com>",
  "scripts": {
    "dev": "NODE_ENV=dev nodemon",
    "start": "npm run build && node dist/app.js",
    "lint": "eslint --ignore-path .gitignore .",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --check --ignore-path .gitignore .",
    "format:fix": "prettier --write --ignore-path .gitignore .",
    "test": "npm run test:unit && npm run test:features",
    "test:unit": "NODE_ENV=test jest",
    "test:unit:watch": "NODE_ENV=test jest --watch",
    "test:unit:coverage": "NODE_ENV=test jest --coverage",
    "test:features": "npm run test:features:backoffice:backend",
    "test:features:backoffice:backend": "NODE_ENV=test cucumber-js -p backoffice_backend",
    "build": "npm run build:clean && npm run build:next",
    "build:clean": "rimraf ./dist; exit 0",
    "build:next": "tsc -p tsconfig.prod.json",
    "prepare": "husky",
    "commit": "commit"
  },
  "dependencies": {
    "assert": "^2.1.0",
    "awilix": "^10.0.1",
    "bson": "^6.3.0",
    "compression": "^1.7.4",
    "convict": "^6.2.4",
    "dotenv": "^16.4.1",
    "env-var": "^7.4.1",
    "errorhandler": "^1.5.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "glob": "^10.3.10",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "mongodb": "^5.8.0",
    "reflect-metadata": "^0.2.1",
    "typeorm": "^0.3.20",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.1.0",
    "@commitlint/config-conventional": "^19.1.0",
    "@commitlint/prompt-cli": "^19.1.0",
    "@cucumber/cucumber": "^10.3.1",
    "@faker-js/faker": "^8.4.0",
    "@types/compression": "^1.7.5",
    "@types/convict": "^6.1.6",
    "@types/cucumber": "^7.0.0",
    "@types/errorhandler": "^1.5.3",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "cross-env": "^7.0.3",
    "eslint": "^8",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.1",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.(js|ts)": "npm run format:fix && run lint:fix"
  },
  "description": "A practical e-commerce project with a strong foundation in Domain-Driven Design (DDD), Clean Architecture, and CQRS. This repository showcases how to build a robust e-commerce system while adhering to best practices.",
  "main": "src/app.js",
  "license": "MIT"
}
