{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "rootDir": ".",
    "strict": true,
    "noEmit": false,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/**.ts", "__tests__/**/**.ts", "./**.ts", "./**.js"],
  "exclude": ["node_modules"]
}
